<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lesson4.javafx.FXMLDocumentController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0.0">
         <bottom>
            <BorderPane prefHeight="37.0" prefWidth="322.0" BorderPane.alignment="BOTTOM_CENTER">
               <right>
                  <Button fx:id="button" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="45.0" prefWidth="121.0" text="Отправить" BorderPane.alignment="BOTTOM_RIGHT" />
               </right>
               <center>
                  <TextField fx:id="textField" onKeyPressed="#handleTextAction" prefHeight="37.0" prefWidth="199.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </bottom>
         <center>
            <TextFlow fx:id="textFlow" prefHeight="179.0" prefWidth="320.0" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
